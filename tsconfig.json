{
  "compilerOptions": {
    "target": "ES6", 
    "module": "CommonJS",
    "moduleResolution": "node", 
    "outDir": "./dist", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true,
    "allowJs": true, 
    "declaration": true, 
    "sourceMap": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"] 
}
